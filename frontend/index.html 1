<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <title>Płatności Stripe</title>
</head>
<body>
  <h1>Wybierz pakiet:</h1>
  <button onclick="buyPackage('monster')">Monster</button>
  <button onclick="buyPackage('premium')">Premium</button>
  <button onclick="buyPackage('silver')">Silver</button>

  <script>
    // Zmień URL na adres Twojego backendu Railway
    const BACKEND_URL = 'https://twój-projekt-railway.up.railway.app';

    async function buyPackage(packageName) {
      try {
        const response = await fetch(`${BACKEND_URL}/create-checkout-session`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ package: packageName })
        });

        const data = await response.json();

        if (data.url) {
          window.location.href = data.url; // przekierowanie do Stripe Checkout
        } else {
          alert('Błąd tworzenia sesji płatności');
        }
      } catch (error) {
        console.error('Błąd:', error);
        alert('Coś poszło nie tak');
      }
    }
  </script>
</body>
</html>
